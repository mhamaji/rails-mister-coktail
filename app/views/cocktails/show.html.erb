<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> - <%= dose.ingredient.name  %>
          <%= link_to "X", dose, method: :delete, data: {confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>

  <%= link_to "Back to list", cocktails_path %>

</div>
