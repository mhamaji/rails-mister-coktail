<div class="container">
  <h1>New Cocktail</h1>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <div class="text-center">
      <%= f.button :submit, class: "btn-success" %>
    </div>
  <% end %>
  <div class="text-center", >
    <%= link_to "Back to list", cocktails_path, class: "btn btn-success" %>
  </div>

</div>
